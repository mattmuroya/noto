datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Note {
  id         String    @id @default(cuid())
  title      String?
  content    String?

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // userId     String
  // user       User      @relation(fields: [userId], references: [id])

}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  passwordHash   String
  name           String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  // notes       Note[]
  sessions       Session[]
}

model Session {
  id             String     @id @default(cuid())
  refreshToken   String     @unique
  createdAt      DateTime   @default(now())
  expiresAt      DateTime

  userId         String
  user           User       @relation(fields: [userId], references: [id])


}
